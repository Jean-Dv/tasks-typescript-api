{
  "name": "tasks-typescript-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "pnpm run test:unit && pnpm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:features": "pnpm run test:mooc:backend:features",
    "test:mooc:backend:features": "NODE_ENV=test cucumber-js -p mooc_backend",
    "build": "pnpm run build:clean && pnpm run build:tsc && pnpm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png} dist/src'",
    "build:clean": "rm -r dist; exit 0"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run lint:fix",
      "npm run prettier:fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@cucumber/cucumber": "9.1.2",
    "@types/body-parser": "1.19.2",
    "@types/compression": "1.7.2",
    "@types/errorhandler": "1.5.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "5.59.9",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard-with-typescript": "35.0.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "body-parser": "1.20.2",
    "compression": "1.7.4",
    "copy": "0.3.2",
    "errorhandler": "1.5.1",
    "express": "4.18.2",
    "express-promise-router": "4.1.1",
    "glob": "10.2.7",
    "helmet": "7.0.0",
    "http-status": "1.6.2",
    "node-dependency-injection": "2.6.11"
  }
}
